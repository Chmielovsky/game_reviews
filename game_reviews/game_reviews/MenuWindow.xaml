<Window x:Class="game_reviews.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:game_reviews"
        mc:Ignorable="d"
        Title="MenuWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Height="35">
            <Button Content="Game List" MinWidth="100" Click="ButtonClickGameList"></Button>
            <Button Content="Add Game" Margin="10,0,0,0" MinWidth="100" Click="ButtonClickAddGame"></Button>
        </StackPanel>
        <Frame x:Name="MainMenuWindow" Margin="0,0,35,0" Navigated="MainMenuWindow_Navigated"/>

    </Grid>
</Window>
